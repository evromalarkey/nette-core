<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>

	{if !\Tracy\Debugger::$productionMode}
		<script type="module" src="http://localhost:3000/@vite/client"></script>
		<script type="module" src="http://localhost:3000/src/scripts/main.js"></script>
		<link rel="stylesheet" href="http://localhost:3000/src/styles/style.css"/>
	{else}
		<script type="module" src="/assets/js/{$manifestJs['main.js']}"></script>
		<link rel="stylesheet" href="/assets/css/{$manifestCss['style.css']}"/>
	{/if}
</head>

<body>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

	{include content}

	{block scripts}
	<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
	{/block}
</body>
</html>
